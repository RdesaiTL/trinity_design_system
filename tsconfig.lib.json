{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/vite-env.d.ts",
    "src/index.ts",
    "src/theme.ts",
    "src/tokens.ts",
    "src/hierarchy.ts",
    "src/accessibility.tsx",
    "src/form.tsx",
    "src/hooks.ts",
    "src/components/**/*"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.stories.*",
    "src/pages/**/*",
    "src/main.tsx",
    "src/App.tsx",
    "src/App.simple.tsx",
    "src/__tests__/**/*"
  ]
}
